<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>
<div class="customlist">
  
  <form action="/custom" method="post">
    <input type="text" class="customlist" name="customlist" id="" placeholder="Custom List" autocomplete="off">
    <button type="submit" value="" class="custombutton">&rarr;</button>
  </form>
</div>
  <div class="box" id="content-box">
    
    <% newListItems.forEach(function(item){ %>
    <form action="/delete" method="post">
      <div class="item">
          <input type="checkbox" name="checkbox" value="<%=item._id%>" onchange="this.form.submit()">
          <p><%=  item.name  %></p>
        </div> 
        <input type="hidden" name="listName" value="<%= listTitle%>"></input>
      </form>
   <% })%>

    
    <form class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
      <button type="submit" class="submit" name="list" value="<%= listTitle%>">+</button>
      </form>
    </div>
    
    <%- include("footer") -%>
    
